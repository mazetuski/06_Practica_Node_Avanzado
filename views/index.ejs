<% include head.html %>
<body>
<% include header.ejs %>
<main>
    <!-- LOOP all advertisements-->
    <% advertisements.forEach(advertisement => { %>
    <div class="box-wrapper">
        <img src="/images/<%= advertisement.photo %>" alt="<%= advertisement.name %>">
        <div>
            <div class="title flex-wrapper between">
                <h3><%= advertisement.name %></h3>
                <div class="flex-wrapper center">
                <% if (advertisement.thumbnail) {%>
                    <span>Thumbnail</span> <img class="thumbnail" src="/images/<%= advertisement.thumbnail %>" alt="<%= advertisement.name %>">
                <% } %>
                </div>
            </div>
            <div class="flex-wrapper between">
                <h5><%= __(advertisement.getSaleString()) %></h5>
                <h5><%= advertisement.price %> â‚¬</h5>
            </div>
            <!--LOOP TAGS-->
            <hr/>
            <h4>Tags</h4>
            <ul>
                <% if (advertisement.tags) {%>
                <% advertisement.tags.forEach(tag => { %>
                <li><%= __(tag) %></li>
                <% })} %>
            </ul>
        </div>
        <!--END LOOP-->
    </div>
    <% }) %>
    <!-- END LOOP -->
</main>
</body>
</html>
